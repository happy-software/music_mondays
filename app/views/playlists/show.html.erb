<h1><%= @playlist.title %></h1>

<div id="player-container"
     data-controller="playlist"
>
  <div data-playlist-target="player"></div>

  <button id='playButton' data-action="click->playlist#play">Play</button>
  <button id='pauseButton' data-action="click->playlist#pause">Pause</button>
  <button id='nextButton' data-action="click->playlist#next">Next</button>

  <div>
    <ol data-playlist-target="songList">
    <% @songs.each do |song| %>
      <li
        data-playlist-target="song"
        data-action="click->playlist#play"
        data-playlist-url-param="<%= song %>"
      >
        <%= song %>
      </li>
    <% end %>
    </ol>
  </div>

  <div>
    Add Song: <input data-playlist-target="newSong"
                     data-submissionUrl-value="<%= 'TODO: Update to submission path' %>"
                     type="text"
                     placeholder="https://www.youtube.com/watch?v=uVi635mDYes">
    <button id="addSongButton" data-action="click->playlist#addSong">Add +</button>
  </div>
</div>
